<h1> <%= @cocktail.name %> </h1>

<div>
  <ul>
  <% @doses.each do |dose| %>
    <p> Ingredient list:
    <li><%=  dose.ingredient.name %></p>
    <li> <%= dose.description %> </p>
    <p> <%= link_to "Delete dose", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
<% end %>
</div>
